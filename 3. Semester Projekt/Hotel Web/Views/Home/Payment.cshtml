@model Hotel_Web.Models.Reservation

@{
	ViewData["Title"] = "Payment";
}

<h1>Payment</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<span>
			<form asp-action="SubmitReservation" method="post">
				<div class="form-group form-check">
					<input asp-for="PayAtLocation" class="form-check-input" type="checkbox" />
					<label asp-for="PayAtLocation" class="form-check-label">Betal på fremmøde</label>
				</div>

				<div class="form-group">
					<input type="submit" value="Videre" class="btn btn-primary" />
				</div>
			</form>
		</span>
		<span>
			<form asp-action="Cancel" method="post">
				<div class="form-group">
					<input type="submit" value="Annuller" class="btn btn-primary" />
				</div>
			</form>
		</span>
	</div>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
